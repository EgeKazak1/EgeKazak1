-- Brookhaven Local Script Template (Kendi menünü ekleyebilmen için sade ve açık kod)
local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Basit bir GUI menüsü
local ScreenGui = Instance.new("ScreenGui", player.PlayerGui)
ScreenGui.Name = "CustomBrookhavenMenu"

local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0, 300, 0, 200)
Frame.Position = UDim2.new(0.5, -150, 0.5, -100)
Frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
Frame.BorderSizePixel = 0

local Title = Instance.new("TextLabel", Frame)
Title.Text = "Brookhaven Custom Menu"
Title.Size = UDim2.new(1, 0, 0, 40)
Title.BackgroundTransparency = 1
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 22

-- "Get Premium" butonu
local PremiumBtn = Instance.new("TextButton", Frame)
PremiumBtn.Text = "Get Premium"
PremiumBtn.Size = UDim2.new(0.8, 0, 0, 40)
PremiumBtn.Position = UDim2.new(0.1, 0, 0, 60)
PremiumBtn.BackgroundColor3 = Color3.fromRGB(100, 200, 80)
PremiumBtn.TextColor3 = Color3.fromRGB(30, 30, 30)
PremiumBtn.Font = Enum.Font.SourceSans
PremiumBtn.TextSize = 20

PremiumBtn.MouseButton1Click:Connect(function()
    -- Premium alma işlemi buraya eklenecek
    print("Premium özelliği alındı!")
    -- Kendi premium kodunu buraya ekleyebilirsin
end)

-- Ekstra butonlar ekleyebilirsin:
local AnotherBtn = Instance.new("TextButton", Frame)
AnotherBtn.Text = "Başka Özellik"
AnotherBtn.Size = UDim2.new(0.8, 0, 0, 40)
AnotherBtn.Position = UDim2.new(0.1, 0, 0, 110)
AnotherBtn.BackgroundColor3 = Color3.fromRGB(80, 120, 200)
AnotherBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
AnotherBtn.Font = Enum.Font.SourceSans
AnotherBtn.TextSize = 20

AnotherBtn.MouseButton1Click:Connect(function()
    print("Başka özellik çalıştı!")
    -- Buraya kendi kodunu ekle
end)

-- Menüyi kapatma
local CloseBtn = Instance.new("TextButton", Frame)
CloseBtn.Text = "Kapat"
CloseBtn.Size = UDim2.new(0.4, 0, 0, 30)
CloseBtn.Position = UDim2.new(0.3, 0, 1, -35)
CloseBtn.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
CloseBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
CloseBtn.Font = Enum.Font.SourceSans
CloseBtn.TextSize = 18

CloseBtn.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

-- Diğer özelliklerinizi eklemek için yukarıdaki buton örneklerini çoğaltabilirsiniz.

-- Premium özelliği örneği:
function getPremium()
    -- Premium özelliği aktif edilir
    print("Premium aktif!")
    -- Premium özellik kodunu buraya ekle
end
